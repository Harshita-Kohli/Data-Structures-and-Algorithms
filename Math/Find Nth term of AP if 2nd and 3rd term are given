#include<bits/stdc++.h>
#include <iostream>
using namespace std;
//TC: O(1)
//SC: O(1)
int main() {
	// your code goes here
	int a2,a3,n;
    cin>>a2;
    cin>>a3;
    cin>>n;
    //find d:
    int d = a3-a2;
    //find a1:
    int a1 = a3-(2)*d;
    //find an:
    int an = a1+(n-1)*d;
    cout<<an<<endl;
	return 0;
}
