//TC: O(N)
//SC: Auxilliary stack space
#include<bits/stdc++.h>
#include <iostream>
using namespace std;
int sum = 0;
void sumCalc(int num){
    //base case:
    if(num==0){//the entire number has been processed
        return;
    }
    int temp = num%10;
    sum+=temp;
    num = num/10;
    //recursive:
    sumCalc(num);
}
int main() {	
    int n;
    cin>>n;
    sumCalc(n);
    cout<<sum;
    return 0;
}
